<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeltaFour.Maui.MainPage"
             Title="Login">

    <!-- Grid raiz ocupa a tela -->
    <Grid Padding="30">

        <!-- Formulário centralizado -->
        <Grid RowSpacing="16"
              ColumnDefinitions="*"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              WidthRequest="360">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Text="Acessar conta" FontSize="24" FontAttributes="Bold" />

            <Entry Grid.Row="1"
                   x:Name="UsernameEntry"
                   Placeholder="E-mail ou usuário"
                   Keyboard="Email"
                   ReturnType="Next" />

            <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Senha"
                       IsPassword="True"
                       ReturnType="Done" />
                <Button x:Name="TogglePasswordButton"
                        Grid.Column="1"
                        Text="Mostrar"
                        Padding="10,6"
                        Clicked="OnTogglePassword"
                        SemanticProperties.Hint="Mostrar ou ocultar senha" />
            </Grid>

            <HorizontalStackLayout Grid.Row="3" Spacing="8">
                <CheckBox x:Name="RememberCheck" />
                <Label Text="Lembrar-me" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <Button Grid.Row="4"
                    x:Name="LoginButton"
                    Text="Entrar"
                    Clicked="OnLoginClicked" />

            <ActivityIndicator Grid.Row="5"
                               x:Name="BusyIndicator"
                               IsVisible="False"
                               IsRunning="False" />

            <Label Grid.Row="6"
                   x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False" />
        </Grid>

    </Grid>
</ContentPage>
