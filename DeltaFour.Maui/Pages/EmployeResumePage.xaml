<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DeltaFour.Maui.Pages.EmployeResume"
             Shell.NavBarIsVisible="False"
             Title="Resumo">

    <ContentPage.Resources>
        <Color x:Key="Surface">#F5F8FB</Color>
        <Color x:Key="Card">#FFFFFF</Color>
        <Color x:Key="Primary">#1e2d69</Color>
        <Color x:Key="Muted">#8EA0B3</Color>

        <Style TargetType="Frame" x:Key="CardFrame">
            <Setter Property="BackgroundColor" Value="{StaticResource Card}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="BorderColor" Value="#FFFFFF"/>
        </Style>

        <Style TargetType="Label" x:Key="CardTitle">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontFamily" Value="Empty"/>
            <Setter Property="TextColor" Value="#0F172A"/>
        </Style>

        <Style TargetType="Label" x:Key="CardCaption">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextColor" Value="{StaticResource Muted}"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView BackgroundColor="{StaticResource Surface}">
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Olá Usuário!" Style="{StaticResource CardTitle}"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">

                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource CardFrame}">
                    <HorizontalStackLayout>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="08:45 BRT" Style="{StaticResource CardTitle}"/>
                            <Label Text="Início do expediente" Style="{StaticResource CardCaption}"/>
                        </VerticalStackLayout>
